@model PlayerDeleteServiceModel

@{
    ViewBag.Title = "Return Player";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="post">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="~/img/players/@Model.ImageUrl" alt="Player Image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" disabled="disabled" />
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Return" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>

